<div class="container">
    <div class="d-flex justify-content-between">
        <h1>Boite de reception</h1>
        <%= link_to emails_path(), remote: true, method: 'post' do%>
        <button class="btn btn-outline-success">Recevoir un email</button>
        <%end%>
    </div>
    <br>
    <div class="row">
        <div class="col-sm-4">
            <table class="table table-striped">
              <thead>
                <tr>
                <th scope="col">#</th>
                <th scope="col">Liste des emails</th>
                </tr>
            </thead>
            <tbody id="maillist">
            <% @emails.each do |email|%>
                <%= render 'email', email: email %>
            <%end%>
            </tbody>
            </table>
        </div>
        <div class="col-sm-8">
            <table class="table table-striped">
                <thead>
                    <tr>
                    <th scope="col">Email selectionn√©</th>
                    </tr>
                </thead>
                <tbody id="display">
                
                </tbody>
            </table>
        </div>
    </div>
</div>